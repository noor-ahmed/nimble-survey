{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "@nimbl3/eslint-config-nimbl3",
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "standard"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-eval": "error",
    "import/first": "error",
    "semi": [2, "always"]
  }
}
